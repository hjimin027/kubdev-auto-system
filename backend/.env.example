# KubeDev Auto System - Environment Variables Example
# Copy this file to .env and modify the values

# Application Settings
APP_NAME=KubeDev Auto System
DEBUG=true
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://kubdev:password@localhost:5432/kubdev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kubernetes Configuration
KUBECONFIG_PATH=/app/.kube/config
K8S_NAMESPACE=kubdev
K8S_IMAGE_PULL_POLICY=IfNotPresent

# Resource Defaults
DEFAULT_CPU_LIMIT=1000m
DEFAULT_MEMORY_LIMIT=2Gi
DEFAULT_STORAGE_LIMIT=10Gi

# Environment Timeout
ENVIRONMENT_TIMEOUT_HOURS=8

# Base IDE Images
BASE_IDE_IMAGES_VSCODE_PYTHON=codercom/code-server:latest
BASE_IDE_IMAGES_VSCODE_NODE=codercom/code-server:latest
BASE_IDE_IMAGES_VSCODE_REACT=codercom/code-server:latest
BASE_IDE_IMAGES_JUPYTER=jupyter/scipy-notebook:latest

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"