FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    KUBEDEV_MOCK=1

WORKDIR /app
COPY backend/ /app/backend/

RUN pip install --no-cache-dir -r /app/backend/requirements.txt

EXPOSE 8000
CMD ["uvicorn", "backend.app:app", "--host", "0.0.0.0", "--port", "8000"]

